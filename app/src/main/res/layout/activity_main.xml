<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context="com.example.miszk.latarunia.MainActivity">
    <ImageButton
            android:src="@drawable/heart"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="336dp"
            android:layout_height="279dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/image_button" app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" tools:layout_editor_absoluteX="40dp"/>
    <TextView
            android:text="Latarunia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView" android:textSize="50sp" android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>
